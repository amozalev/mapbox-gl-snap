{
 "compilerOptions": {
  "module": "CommonJS",
  "target": "ES5",
  "typeRoots": ["./types", "./node_modules/@types"],
  "moduleResolution":"Node",
  "outDir": "dist/cjs",
  "declaration": true,
  "declarationDir": "dist/cjs",
  "sourceMap": true,
  "strict": true,
  "esModuleInterop": true,
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true
 },
 "include": ["src/**/*",  "types/**/*.d.ts"],
 "exclude": ["node_modules", "dist"]
}